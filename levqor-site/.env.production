NEXT_PUBLIC_LEVQOR_BRAIN_CANVAS_ENABLED=true

# CRITICAL: NEXTAUTH_URL must match where OAuth callbacks land (www subdomain)
# Cookie domain .levqor.ai ensures cross-subdomain auth works
