modules = ["python-3.11", "nodejs-20", "postgresql-16"]
[agent]
expertMode = true
integrations = ["stripe:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "levqor-backend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "levqor-frontend"

[[workflows.workflow]]
name = "levqor-backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --workers ${GUNICORN_WORKERS:-2} --threads ${GUNICORN_THREADS:-4} --timeout ${GUNICORN_TIMEOUT:-30} --graceful-timeout 20 --bind 0.0.0.0:8000 --reuse-port --log-level info run:app"
waitForPort = 8000

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "levqor-frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd levqor-site && npm run dev -- -p 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[nix]
channel = "stable-25_05"
packages = ["freetype", "glibcLocales"]

[userenv]

[userenv.development]
STRIPE_PRICE_DFY_STARTER = "price_1SW5zoBNwdcDOF99SLdCP484"
STRIPE_PRICE_DFY_PROFESSIONAL = "price_1SW5zoBNwdcDOF99LKhSEow6"
STRIPE_PRICE_DFY_ENTERPRISE = "price_1SW5zoBNwdcDOF99yEuejfTJ"
STRIPE_PRICE_ADDON_EXTRA_WORKFLOWS = "price_1SW5zpBNwdcDOF995MpJq8eA"
STRIPE_PRICE_AGENCY = "price_1SW5znBNwdcDOF991WJRJuSC"
STRIPE_PRICE_AGENCY_YEAR = "price_1SW5znBNwdcDOF99iCB3blS0"
STRIPE_PRICE_ADDON_PRIORITY_SUPPORT = "price_1SW5zoBNwdcDOF99fb2rBq17"
STRIPE_PRICE_ADDON_SLA_99 = "price_1SW5zpBNwdcDOF99jcZ90vkG"
STRIPE_PRICE_ADDON_WHITE_LABEL = "price_1SW5zpBNwdcDOF995naLMZD8"

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "--workers", "2", "--threads", "4", "--timeout", "30", "--log-level", "info", "run:app"]
